<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.grupp5.agila_schemalggare.controllers.RegisterController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="20.0"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <Label>Register new user</Label>
        <Label>Enter desired username:</Label>
        <TextField fx:id="usernameInputField" maxWidth="200"></TextField>
        <Label>Enter desired password:</Label>
        <TextField fx:id="passwordInputField" maxWidth="200"></TextField>
        <Button fx:id="submitButton" onAction="#submitUserDetails">Submit</Button>
        <Label fx:id="submitConfirmation"></Label>
    </VBox>
</AnchorPane>
