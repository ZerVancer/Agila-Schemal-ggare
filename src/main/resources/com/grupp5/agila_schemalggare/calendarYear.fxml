<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="10.0"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/24.0.1"
      fx:controller="com.grupp5.agila_schemalggare.controllers.CalendarYearController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER">
        <Button fx:id="prevYearButton" text="&lt;" onAction="#switchToPrevYear" />
        <Label fx:id="yearLabel" alignment="CENTER" prefWidth="125" style="-fx-font-size: 18px; -fx-font-weight: bold" text="Year" />
        <Button fx:id="nextYearButton" text="&gt;" onAction="#switchToNextYear" />
    </HBox>

    <Label fx:id="monthsLabel" style="-fx-font-size: 14px; -fx-font-weight: bold" text="month" />

    <GridPane fx:id="yearGrid" alignment="CENTER" hgap="5" vgap="5">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="100" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="100" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="100" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="100" vgrow="SOMETIMES" />
        </rowConstraints>
    </GridPane>

</VBox>
