<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.grupp5.agila_schemalggare.controllers.CalendarDayController">

    <!--day & date-->
    <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
          AnchorPane.topAnchor="10">
        <Label fx:id="dayAndDateLabel" text="PH: DAY AND DATE"/>
    </VBox>

    <!--events list-->
    <ScrollPane fitToWidth="true"
                hbarPolicy="NEVER"
                style="-fx-background-color:transparent"
                AnchorPane.bottomAnchor="50"
                AnchorPane.leftAnchor="10"
                AnchorPane.rightAnchor="10"
                AnchorPane.topAnchor="50">
        <VBox fx:id="eventsContainer" alignment="TOP_CENTER" spacing="30">
        </VBox>
    </ScrollPane>

    <!--return to calendar button-->
    <HBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10">
        <Button fx:id="returnButton" maxWidth="100.00" onAction="#returnToCalendar" text="Return to calendar"/>
    </HBox>

</AnchorPane>
