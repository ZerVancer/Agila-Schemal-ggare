<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="5.0"
      minWidth="60"
      fx:controller="com.grupp5.agila_schemalggare.controllers.SideMenuController">

    <Label text="Menu" style="-fx-font-size: 18px; -fx-font-weight: bold; "/>

    <!-- Meny fÃ¶r rendering -->
    <VBox alignment="CENTER"
          spacing="5.0">

        <VBox.margin>
            <Insets top="5" />
        </VBox.margin>

        <Button fx:id="renderWeekly" text="Weekly" minWidth="80" onAction="#handleWeeklyClick"/>
        <Button fx:id="renderMonthly" text="Monthly" minWidth="80" onAction="#handleMonthlyClick"/>
        <Button fx:id="renderYearly" text="Yearly" minWidth="80" onAction="#handleYearlyClick"/>
    </VBox>

    <!-- Kommande event -->
    <VBox>

        <VBox.margin>
            <Insets top="10" />
        </VBox.margin>

        <Label text="Upcoming Events:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

        <GridPane fx:id=""/>

    </VBox>

</VBox>
