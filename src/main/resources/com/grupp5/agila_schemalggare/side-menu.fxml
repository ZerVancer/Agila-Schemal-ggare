<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="5.0"
      minWidth="60"
      maxWidth="200"
      fx:controller="com.grupp5.agila_schemalggare.controllers.SideMenuController">

    <Label text="Menu" style="-fx-font-size: 18px; -fx-font-weight: bold; "/>

    <!-- Logged in user with logout button -->
    <VBox alignment="CENTER" spacing="5.0">
        <Label fx:id="loggedInUser" text=""  style="-fx-font-weight: bold; "/>
        <Button fx:id="adminButton" text="Admin menu" prefWidth="85" onAction="#handleAdminClick"/>
        <Button fx:id="logOutButton" text="Log out" minWidth="85" onAction="#handleLogoutClick"/>
    </VBox>


    <!-- Meny fÃ¶r rendering -->
    <VBox alignment="CENTER"
          spacing="5.0">

        <VBox.margin>
            <Insets top="5" />
        </VBox.margin>

        <Button fx:id="renderWeekly" text="Weekly" minWidth="85" onAction="#handleWeeklyClick"/>
        <Button fx:id="renderMonthly" text="Monthly" minWidth="85" onAction="#handleMonthlyClick"/>
        <Button fx:id="renderYearly" text="Yearly" minWidth="85" onAction="#handleYearlyClick"/>
    </VBox>

    <!-- Kommande event -->
    <VBox alignment="CENTER">

        <VBox.margin>
            <Insets top="10" />
        </VBox.margin>

        <Label text="Upcoming Events:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

        <GridPane fx:id="currentEventsGrid" alignment="CENTER">
            <padding>
                <Insets top="5" right="10" bottom="5" left="10" />
            </padding>
        </GridPane>

    </VBox>

</VBox>
