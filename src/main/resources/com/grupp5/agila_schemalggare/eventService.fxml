<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.grupp5.agila_schemalggare.controllers.EventServiceController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TextField fx:id="titleField" promptText="Title" />
    <TextField fx:id="descriptionField" promptText="Description" />
    <VBox alignment="CENTER" spacing="10">
        <Label text="Start Time" />
        <HBox alignment="CENTER" spacing="5">
            <Label text="Hour" />
            <Spinner fx:id="startTimeHourSpinner" max="23" min="0" prefHeight="25.0" prefWidth="55.0" />
            <Label alignment="CENTER" text="Minute" />
            <Spinner fx:id="startTimeMinuteSpinner" max="59" min="0" prefHeight="25.0" prefWidth="55.0" />
        </HBox>
    </VBox>
    <VBox alignment="CENTER" spacing="10">
        <Label text="End Time" />
        <HBox alignment="CENTER" spacing="5">
            <Label text="Hour" />
            <Spinner fx:id="endTimeHourSpinner" max="23" min="0" prefHeight="25.0" prefWidth="55.0" />
            <Label alignment="CENTER" text="Minute" />
            <Spinner fx:id="endTimeMinuteSpinner" max="59" min="0" prefHeight="25.0" prefWidth="55.0" />
        </HBox>
    </VBox>
    <Label fx:id="errorMessage" alignment="CENTER" />
    <VBox alignment="CENTER" spacing="5">
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#confirmButton" text="Confirm" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#closeWindowAction" text="Cancel" />
        </HBox>
        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteButton" text="Delete" visible="false" />
    </VBox>
</VBox>
